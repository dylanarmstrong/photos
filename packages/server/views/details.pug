extends layout

block content
  div.header.navigation
    div
      a#home(title='Home', href=baseUrl)='Home'
      a#back(title='Go Back', href=prevUrl)='Back to Album'
      if prevPage != undefined
        a#prev(title='Previous', href=prevPage)='Previous'
      if nextPage != undefined
        a#next(title='Next', href=nextPage)='Next'
      a(title='Download', href=data.images.lg.jpeg)='Download'

  .details
    .details-image
      picture
        source(srcset=data.images.md.webp, type='image/webp')
        img#detail-img(
          alt='Image #1',
          src=data.images.md.jpeg,
        )

    aside.details-data
      table.details-table
        thead
          tr
            th.mobile
              =""
            th.text-3xl.mobile
              ="Info"
        tbody
          tr
            td.mobile
              include svg/photo.svg
            td.mobile
              =data.base
              br
              div.grid.grid-cols-3.gap-2.text-sm
                p=data.exif.resolution
                p=data.exif.megapixels+" MP"

          tr
            td.mobile
              include svg/calendar.svg
            td.mobile
              =data.exif.displayDate

          tr
            td.mobile
              include svg/camera.svg
            td.mobile
              =data.exif.make
              =data.exif.model
              br
              div.grid.grid-cols-4.gap-2.text-sm
                p="ISO" + data.exif.isoSpeedRatings
                p="Æ’" + data.exif.fNumber
                p=data.exif.shutterSpeedValue
                p=data.exif.focalLength+"mm"

          tr
            td.mobile
              include svg/location.svg
            td.mobile
              =data.exif.coord

      hr.my-5

      .w-full#map(
        data-latitude-ref=data.exif.latitudeRef
        data-latitude=data.exif.latitude
        data-longitude-ref=data.exif.longitudeRef
        data-longitude=data.exif.longitude
      )
