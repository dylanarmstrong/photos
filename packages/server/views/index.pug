extends layout

block header
  h1 Photo Albums

block content
  table
    thead
      tr
        th="photos"
        th="country"
        th="month"
        th="year"
        th="count"
    tbody
      each album in albums
        tr
          if album.disabled
            td="-"
          else
            td
              a(href=album.album + '/1')="View"
          td=album.country
          td=album.month
          td=album.year
          if album.disabled
            td="-"
          else
            td=album.count
