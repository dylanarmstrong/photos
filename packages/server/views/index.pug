extends layout

block header
  h1 Photo Albums

block content
  table.index-table
    thead
      tr
        th.mobile="photos"
        th.mobile="country"
        th="month"
        th.mobile="year"
        th="count"
    tbody
      each album in albums
        tr
          if album.disabled
            td.mobile="-"
          else
            td.mobile
              a(href=album.album + '/1')="View"
          td.mobile=album.country
          td=album.month
          td.mobile=album.year
          if album.disabled
            td="-"
          else
            td=album.count
