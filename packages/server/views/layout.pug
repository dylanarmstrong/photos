doctype html
html(lang='en-us')
  head
    block title
      title='Photo Albums'

    meta(
      content='width=device-width, initial-scale=1, shrink-to-fit=no',
      name='viewport',
    )

    meta(
      content='Travel photos by Dylan Armstrong',
      name='description',
    )

    meta(
      content='#133dc8',
      name='theme-color',
    )

    meta(
      content='same-origin'
      name='referrer'
    )

    link(
      href='/apple-touch-icon.png'
      rel='apple-touch-icon'
      sizes='180x180'
    )

    link(
      href='/favicon-32x32.png'
      rel='apple-touch-icon'
      sizes='32x32'
    )

    link(
      href='/favicon-16x16.png'
      rel='apple-touch-icon'
      sizes='16x16'
    )

    link(
      href='/favicon.ico'
      rel='shortcut icon'
    )

    link(
      as='font',
      crossorigin='anonymous',
      href=baseUrl + '/fonts/mukta-latin-400.woff',
      rel='preload',
      type='font/woff',
    )

    link(
      as='font',
      crossorigin='anonymous',
      href=baseUrl + '/fonts/mukta-latin-400.woff2',
      rel='preload',
      type='font/woff2',
    )

    link(
      as='font',
      crossorigin='anonymous',
      href=baseUrl + '/fonts/mukta-latin-700.woff',
      rel='preload',
      type='font/woff',
    )

    link(
      as='font',
      crossorigin='anonymous',
      href=baseUrl + '/fonts/mukta-latin-700.woff2',
      rel='preload',
      type='font/woff2',
    )

    if isDevelopment
      script(
        nonce=nonce,
        src='http://localhost:5173/@vite/client',
        type='module',
      )
      script(
        nonce=nonce,
        src='http://localhost:5173/src/main.ts'
        type='module',
      )
    else
      link(
        href=baseUrl + '/main.css',
        nonce=nonce,
        rel='stylesheet',
      )
      script(
        src=baseUrl + '/main.js',
        nonce=nonce,
        type='module',
      )

    block head

  body
    header
      block header

    block content

    footer
      p="Â© " + year + " Dylan Armstrong. All rights reserved."
