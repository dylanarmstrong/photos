extends layout

block title
  if album.month
    title=album.country + ' ' + album.year + ' - ' + album.month
  else
    title=album.country + ' ' + album.year

block header
  if album.month
    h1=album.country + " " + album.year + " - " + album.month
  else
    h1=album.country + " " + album.year
  h2='Page ' + page + ' of ' + pages

block content
  div.header.navigation
    div
      a#home(title='Home', href=baseUrl)='Home'
      if page > 1
        a#prev(title='Previous', href=prevPage)='Previous'
      if page < pages
        a#next(title='Next', href=nextPage)='Next'

  div.image-container
    each data, index in datas
      div.image-block
        figure
          a.group(
            aria-label='Click to see details for image #' + (index + 1),
            href=baseUrl + '/' + album.album + '/details/' + ((page - 1) * imagesPerPage + index),
          )
            picture
              source(srcset=data.images.sm.webp, type='image/webp')
              img(
                alt='Image #' + (index + 1),
                height=data.images.sm.height,
                src=data.images.sm.jpeg,
                width=data.images.sm.width,
              )
            div(
              class='data md:group-hover:opacity-100'
            )
              p
                =data.exif.coord
              p
                =data.exif.displayDate
              p
                =data.exif.make
                =data.exif.model
              p
                =data.exif.resolution

          figcaption
            p
              =data.exif.coord
            p
              =data.exif.displayDate
            p
              =data.exif.make
              =data.exif.model
            p
              =data.exif.resolution

  div.footer.navigation
    if page > 1
      a(title='Previous', href=prevPage)='Previous'
    if page < pages
      a(title='Next', href=nextPage)='Next'
