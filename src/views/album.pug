extends layout

block title
  if album.month
    title=album.country + ' ' + album.year + ' - ' + album.month
  else
    title=album.country + ' ' + album.year

block header
  if album.month
    h1=album.country + " " + album.year + " - " + album.month
  else
    h1=album.country + " " + album.year
  h4='Page ' + page + ' of ' + pages

block content
  div.navigation
    div
      a#home(title='Home', href=baseUrl)='Home'
    if page > 1
      a#prev(title='Previous', href=prevPage)='Previous'
    if page < pages
      a#next(title='Next', href=nextPage)='Next'

  div.image-container
    each data, index in datas
      div.block
        figure
          a(
            aria-label='Click to see full sized image #' + (index + 1),
            href=data.image,
            rel='noopener noreferrer',
            target='_blank',
          )
            picture
              source(srcset=data.webp, type='image/webp')
              img(
                alt='Image #' + (index + 1),
                height=data.height,
                src=data.jpeg,
                width=data.width,
              )

          figcaption
            p
              =data.exif.coord
            p
              =data.exif.displayDate
            p
              =data.exif.make
              =data.exif.model
            p
              =data.exif.resolution

  div.navigation
    if page > 1
      a(title='Previous', href=prevPage)='Previous'
    if page < pages
      a(title='Next', href=nextPage)='Next'
