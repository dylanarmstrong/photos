html
  head
    title=album
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='stylesheet', type='text/css', href='/photos/css/index.css')
    link(rel='preload', href='/photos/fonts/mukta-all-400-normal.woff', as='font', type='font/woff', crossorigin='anonymous')
    link(rel='preload', href='/photos/fonts/mukta-latin-400-normal.woff2', as='font', type='font/woff2', crossorigin='anonymous')

  body
    header
      h1=album
      h4='Page ' + page + ' of ' + pages

    div.navigation
      div
        a(title='Home', href=home)='Home'
      if page > 1
        a(title='Previous', href=prevPage)='Previous'
      if page < pages
        a(title='Next', href=nextPage)='Next'

    div.container
      each data in datas
        div.block
          if data.image.match(/^.*\.mov.*$/)
            video(src=data.image, controls, preload='none')
          else
            a(href=data.image, rel='noopener noreferrer', target='_blank')
              img(src=data.thumb)

    div.navigation
      if page > 1
        a(title='Previous', href=prevPage)='Previous'
      if page < pages
        a(title='Next', href=nextPage)='Next'

